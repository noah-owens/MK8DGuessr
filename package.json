{
  "private": true,
  "type": "module",
  "workspaces": [
    "web/mk8d-guessr",
    "cli",
    "scenes"
  ],
  "scripts": {
    "dev:web": "npm --workspace web/mk8d-guessr run dev",
    "lint:web": "eslint web",
    "build:web": "npm --workspace web/mk8d-guessr run build",
    "prettier:web": "prettier --write \"web/**/*.{ts,tsx}\"",
    "format:web": "npm run prettier:web && npm run lint:web",
    "prettier:scenes": "prettier --write \"scenes/**/*.{ts,tsx}\"",
    "lint:scenes": "eslint scenes",
    "format:scenes": "npm run prettier:scenes && npm run lint:scenes",
    "format:all": "npm run format:web && npm run format:scenes"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.45.0"
  },
  "dependencies": {
    "globals": "^16.4.0"
  }
}
